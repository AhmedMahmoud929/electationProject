<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Main Styles -->
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/form.css" />
    <link rel="stylesheet" href="./css/upload.css" />
  </head>
  <body>
    <!-- HEADER -->

    <header class="header">
      <div class="header-content responsive-wrapper">
        <div class="header-logo">
          <a href="/">
            <div>
              <img
                src="https://assets.codepen.io/285131/untitled-ui-icon.svg"
              />
            </div>
            <img src="https://assets.codepen.io/285131/untitled-ui.svg" />
          </a>
        </div>
        <i class="fa-solid fa-bars"></i>
        <a href="/logout" class="button danger">
          <span>Logout</span>
        </a>
      </div>
    </header>
    <!-- MAIN -->
    <main class="main">
      <div class="responsive-wrapper">
        <div class="content">
          <!-- ASIDE -->
          <%- include("../parts/aside.ejs", {active:"upload-electors"}) %>

          <!-- HERE -->
          <div class="content-main">
            <!-- <h1 class="title">Insert a set of data</h1> -->
            <h1 class="title">Upload CSV File</h1>
            <p style="display: none; text-align: center" class="waiting-msg">
              Data is being analyzed. Please wait
              <b>(don't refresh the page)</b>
            </p>
            <%- include("../parts/loader.ejs") %>
            <form
              method="POST"
              action="/upload-electors"
              enctype="multipart/form-data"
              class="upload-container"
            >
              <!-- <h2>Upload CSV File</h2> -->
              <p>Select a CSV file from your device.</p>
              <div class="upload-btn-wrapper">
                <div class="file-input-cont">
                  Choose file
                  <input type="file" id="csvFile" name="file" accept=".csv" />
                </div>
                <input type="submit" value="Insert into DB" />
                <div class="file-name">No file chosen</div>
              </div>
              <div class="hint">Supported file format: CSV</div>
              <div class="list-container">
                <p>Note That:</p>
                <ul>
                  <li>
                    Data must be in this format
                    <b
                      >{ NID, fullName, job, phone, electionPlace, isElected,
                      group }</b
                    >
                  </li>
                  <li>All previous fields <b>must be filled</b>.</li>
                  <li>NID must be <b>unique</b>.</li>
                  <li>Group must <b>exist</b>.</li>
                </ul>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <!-- Main Scripts -->
    <script src="./js/uploadForm.js"></script>
    <script src="./js/asideToggle.js"></script>
  </body>
</html>
